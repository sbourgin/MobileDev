<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".MainActivity" >

    <TextView
        android:id="@+id/mainTextMessage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/mainTextUsername"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="UserName : " />

    <EditText
        android:id="@+id/mainUserName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:ems="10" /><TextView
        android:id="@+id/mainTextPassword"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="UserName : " />

    <EditText
        android:id="@+id/mainPassword"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="44dp"
        android:ems="10"
        android:inputType="textPassword" />



    <Button
        android:id="@+id/mainSignIn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="24dp"
        android:layout_marginTop="103dp" />
    
        <TextView
        android:id="@+id/mainTextOr"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="OR" />
    
        <Button
        android:id="@+id/mainCreateAccount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="24dp" />

</LinearLayout>